<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.navsupport.loginapp.ui.welcome.WelcomeFragment"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/welcome_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        tools:text="Welcome [login]" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout_button"
        style="@style/my_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="8dp"
        android:drawableEnd="@drawable/ic_login"
        android:text="@string/log_out"
        app:drawableTint="@color/purple_200" />
    <ProgressBar
        android:id="@+id/loading_progress_bar_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="8dp"
        android:indeterminateTint="@color/black"
        android:visibility="gone" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/choose_payment_button"
        style="@style/my_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="8dp"
        android:text="@string/choose_payment_method"
        app:drawableTint="@color/purple_200" />
    <TextView
        android:id="@+id/payment_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="@string/payment_selected"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        tools:text="Payment selected" />
</androidx.appcompat.widget.LinearLayoutCompat>